{
    "name": "solas-attendance-tracker",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "update-types": "npx supabase gen types typescript --project-id \"$PROJECT_ID\" > src/lib/types/supabase.ts",
        "prepare": "npm run smui-theme-light && npm run smui-theme-dark",
        "smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
        "smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
        "preview": "vite preview",
        "test": "playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test:unit": "vitest",
        "lint": "prettier --plugin-search-dir . --check . && eslint .",
        "format": "prettier --plugin-search-dir . --write ."
    },
    "devDependencies": {
        "@carbon/charts": "^1.22.15",
        "@carbon/charts-svelte": "^1.22.15",
        "@playwright/test": "^1.50.0",
        "@smui-extra/autocomplete": "8.0.0-beta.3",
        "@smui/card": "8.0.0-beta.3",
        "@smui/checkbox": "8.0.0-beta.3",
        "@smui/data-table": "8.0.0-beta.3",
        "@smui/dialog": "8.0.0-beta.3",
        "@smui/form-field": "8.0.0-beta.3",
        "@smui/icon-button": "8.0.0-beta.3",
        "@smui/layout-grid": "8.0.0-beta.3",
        "@smui/list": "8.0.0-beta.3",
        "@smui/select": "8.0.0-beta.3",
        "@smui/snackbar": "8.0.0-beta.3",
        "@smui/tab": "8.0.0-beta.3",
        "@smui/tab-bar": "8.0.0-beta.3",
        "@smui/textfield": "8.0.0-beta.3",
        "@smui/top-app-bar": "8.0.0-beta.3",
        "@supabase/ssr": "^0.5.2",
        "@supabase/supabase-js": "^2.48.1",
        "@sveltejs/adapter-auto": "4.0.0",
        "@sveltejs/adapter-vercel": "5.5.3",
        "@sveltejs/kit": "^2.16.1",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@tsconfig/svelte": "^5.0.4",
        "@types/luxon": "^3.4.2",
        "@typescript-eslint/eslint-plugin": "^8.21.0",
        "@typescript-eslint/parser": "^8.21.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-svelte": "^2.46.1",
        "luxon": "^3.5.0",
        "postcss": "^8.5.1",
        "postcss-load-config": "^6.0.1",
        "postcss-preset-env": "^10.1.3",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "^3.4.2",
        "prettier-plugin-svelte": "^3.3.3",
        "smui-theme": "8.0.0-beta.3",
        "svelte": "^5.19.2",
        "svelte-calendar": "^3.1.6",
        "svelte-check": "^4.1.4",
        "svelte-preprocess": "^6.0.3",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3",
        "vite": "^6.0.11",
        "vitest": "^3.0.4",
        "yup": "^1.6.1"
    },
    "type": "module"
}
