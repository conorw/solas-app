{
    "name": "solas-attendance-tracker",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "update-types": "npx supabase gen types typescript --project-id \"$PROJECT_ID\" > src/lib/types/supabase.ts",
        "prepare": "npm run smui-theme-light && npm run smui-theme-dark",
        "smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
        "smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
        "preview": "vite preview",
        "test": "playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test:unit": "vitest",
        "lint": "prettier --plugin-search-dir . --check . && eslint .",
        "format": "prettier --plugin-search-dir . --write ."
    },
    "devDependencies": {
        "@carbon/charts": "^1.22.7",
        "@carbon/charts-svelte": "^1.22.7",
        "@playwright/test": "^1.28.1",
        "@smui-extra/autocomplete": "8.0.0-beta.0",
        "@smui/card": "8.0.0-beta.0",
        "@smui/checkbox": "8.0.0-beta.0",
        "@smui/data-table": "8.0.0-beta.0",
        "@smui/dialog": "8.0.0-beta.0",
        "@smui/form-field": "8.0.0-beta.0",
        "@smui/icon-button": "8.0.0-beta.0",
        "@smui/layout-grid": "8.0.0-beta.0",
        "@smui/list": "8.0.0-beta.0",
        "@smui/select": "8.0.0-beta.0",
        "@smui/snackbar": "8.0.0-beta.0",
        "@smui/tab": "8.0.0-beta.0",
        "@smui/tab-bar": "8.0.0-beta.0",
        "@smui/textfield": "8.0.0-beta.0",
        "@smui/top-app-bar": "8.0.0-beta.0",
        "@supabase/ssr": "^0.5.1",
        "@supabase/supabase-js": "^2.45.4",
        "@sveltejs/adapter-auto": "3.2.5",
        "@sveltejs/adapter-vercel": "5.4.5",
        "@sveltejs/kit": "^2.7.0",
        "@tsconfig/svelte": "^5.0.4",
        "@types/luxon": "^3.1.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "autoprefixer": "^10.4.7",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-svelte": "^2.45.1",
        "luxon": "^3.1.1",
        "postcss": "^8.4.14",
        "postcss-load-config": "^4.0.1",
        "postcss-preset-env": "^7.8.3",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "^3.1.0",
        "prettier-plugin-svelte": "^3.2.6",
        "smui-theme": "8.0.0-beta.0",
        "svelte": "^5.0.0",
        "svelte-calendar": "^3.1.6",
        "svelte-check": "^4.0.0",
        "svelte-forms-lib": "^2.0.1",
        "svelte-preprocess": "^6.0.3",
        "tslib": "^2.4.1",
        "typescript": "^5.5.0",
        "vite": "^5.4.8",
        "vitest": "^2.1.8",
        "yup": "^0.32.11"
    },
    "type": "module"
}
